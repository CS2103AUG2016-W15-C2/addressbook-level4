<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Rectangle?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
	<children>

		<GridPane HBox.hgrow="ALWAYS">

			<columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="80.0" minWidth="12.0" prefWidth="16.0" />
				<ColumnConstraints hgrow="NEVER" maxWidth="148.0" minWidth="30.0" prefWidth="70.0" />
				<ColumnConstraints hgrow="NEVER" maxWidth="750.0" minWidth="441.0" prefWidth="687.0" />
        <ColumnConstraints maxWidth="495.0" minWidth="138.0" prefWidth="201.0" />
      <ColumnConstraints />

			</columnConstraints>
  			<rowConstraints>
  				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
  			</rowConstraints>

  			<children>
  				<Label fx:id="id" styleClass="cell_big_label" GridPane.columnIndex="1">
            <GridPane.margin>
              <Insets left="10.0" />
            </GridPane.margin>
          </Label>
  				
          <Label fx:id="description" minWidth="-Infinity" prefHeight="16.0" prefWidth="670.0" styleClass="cell_big_label" text="\$description" GridPane.columnIndex="2" />
          <GridPane prefHeight="30.0" prefWidth="171.0" GridPane.columnIndex="3">
            <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
          		<Label fx:id="firstDate" minWidth="-Infinity" prefHeight="21.0" prefWidth="200.0" styleClass="cell_medium_label" text="\$firstDate" GridPane.columnIndex="1" />
            	<Label fx:id="secondDate" minWidth="-Infinity" prefHeight="21.0" prefWidth="200.0" styleClass="cell_medium_label" text="\$secondDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
            <columnConstraints>
              <ColumnConstraints />
              <ColumnConstraints halignment="RIGHT" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
              <ColumnConstraints maxWidth="0.0" minWidth="0.0" prefWidth="0.0" />
            </columnConstraints>
          </GridPane>
          <Rectangle fx:id="colorTag" arcHeight="5.0" arcWidth="5.0" height="50.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="15.0" GridPane.vgrow="ALWAYS" />
  			</children>
        
  		</GridPane>

  	</children>
	<padding>
		<Insets bottom="10.0" right="10.0" top="10.0" />
	</padding>
</HBox>
